@model StudentExpenseTracker.Models.Budget

@{
    // Setting the title of the page
    ViewData["Title"] = "Delete Budget";
}

<h1 class="mt-5">Delete Budget</h1>

<h3>Are you sure you want to delete this budget?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="mt-4">
            <!-- Hidden input field to pass BudgetId to the action method -->
            <input type="hidden" asp-for="BudgetId" />
            <!-- Submit button to confirm deletion -->
            <input type="submit" value="Delete" class="btn btn-danger" />
            <!-- Link to go back to the list of budgets -->
            <a asp-action="Index" class="btn btn-secondary">Back to Budgets</a>
        </div>
    </form>
</div>
