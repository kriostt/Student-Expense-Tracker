@model List<Budget>

<h2>Budgets</h2>

<p><a asp-action="Create">Create New Budget</a></p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Amount</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var budget in Model)
        {
            <tr>
                <td>@budget.Name</td>
                <td>@budget.Amount</td>
                <td>@budget.Category.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@budget.BudgetId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@budget.BudgetId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
