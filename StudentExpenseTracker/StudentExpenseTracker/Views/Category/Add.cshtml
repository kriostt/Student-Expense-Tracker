@model StudentExpenseTracker.Models.Category

@{
    ViewData["Title"] = "Add Category";
}

<!-- Heading for the add category page -->
<h1 class="mt-5">Add Category</h1>

<!-- Horizontal line -->
<hr />
<!-- Row to contain the form -->
<div class="row">
    <div class="col-md-4 mt-3">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-select">
                    <option value="">Select a type</option>
                    <option value="Expense">Expense</option>
                    <option value="Income">Income</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="mt-4">
                <!-- Submit button to create the category -->
                <input type="submit" value="Add" class="btn btn-primary" />
                <!-- Link to go back to the categories list -->
                <a asp-action="Index" class="btn btn-secondary">Back to Categories</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
