@model StudentExpenseTracker.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<!-- Heading for the delete category page -->
<h1 class="mt-5">Delete Category</h1>

<!-- Confirmation message -->
<h3>Are you sure you want to delete this category?</h3>

<div>
    <!-- Horizontal line -->
    <hr />
    <!-- List to display category details -->
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="mt-4">
            <!-- Hidden input for category id -->
            <input type="hidden" asp-for="CategoryId" />
            <!-- Submit button to delete the category -->
            <input type="submit" value="Delete" class="btn btn-danger" />
            <!-- Link to go back to the categories list -->
            <a asp-action="Index" class="btn btn-secondary">Back to Categories</a>
        </div>
    </form>
</div>
