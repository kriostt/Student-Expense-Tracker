@model StudentExpenseTracker.Models.Transaction

@{
    ViewData["Title"] = "Delete Transaction";
}

<!-- Page title -->
<h1 class="mt-5">Delete Transaction</h1>

<!-- Delete confirmation message -->
<h4>Are you sure you want to delete this transaction?</h4>

<div>
    <hr />
    <!-- Display transaction details -->
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="mt-4">
            <!-- Hidden field for transaction ID -->
            <input type="hidden" asp-for="TransactionId" />
            <!-- Delete button -->
            <input type="submit" value="Delete" class="btn btn-danger" />
            <!-- Button to go back to the home page -->
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
        </div>
    </form>
</div>
